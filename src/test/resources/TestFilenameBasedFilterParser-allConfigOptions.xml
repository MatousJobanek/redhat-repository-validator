<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:filter="http://redhat-repository-validator.org/schema/exception-filters"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://redhat-repository-validator.org/schema/exception-filters http://redhat-repository-validator.org/schema/exception-filters.xsd">

    <filter:filename regex="regex-only-.*\.jar"/>

    <filter:filename regex="regex-and-exception.*\.jar" exception="SuspiciousFileException"/>

    <filter:filename regex="regex-and-list-of-exceptions-.*\.jar">
        <filter:exceptions>
            <filter:exception>SuspiciousFileException</filter:exception>
            <filter:exception>com.redhat.repository.validator.filter.internal.TestingException</filter:exception>
        </filter:exceptions>
    </filter:filename>
</beans>