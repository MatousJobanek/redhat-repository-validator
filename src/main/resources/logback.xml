<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <logger name="org.springframework" level="warn" />

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="stdout" />
    </root>

</configuration>